" Enable syntax highlighting
syntax on

" Show file stats
set ruler

" Blink cursor on error instead of beeping (grr)
set visualbell

" Encoding
set encoding=utf-8

" General format settings
set formatoptions=tcqrn1
set number
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab
set noshiftround
